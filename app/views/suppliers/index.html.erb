<% content_for :body_id, "home_page" %>

<% @suppliers.each do |supplier| %>
	<marker name="<%= supplier.name %>" address="<%= supplier.address %>" lat="<%= supplier.latitude %>" lng="<%= supplier.longitude %>"/>
<% end %>
<div id="map_canvas"></div>
<div id="you_are_here" data-name="Ridiculous Hat" data-address="<%= Rails.configuration.ridiculous_address %>" data-lat="<%= Rails.configuration.ridiculous_lat %>" data-lng="<%= Rails.configuration.ridiculous_lon %>"></div>
<div id="nav"><%= image_tag AssetUrl.url + "img/logo.png", :alt => "logo", :id => "logo" %></div>

<div class="container">

  <% if user_signed_in? %>
      Logged in as <strong><%= current_user.email %></strong>.
      <%= link_to 'Edit profile', edit_user_registration_path %> |
      <%= link_to "Logout", destroy_user_session_path, method: :delete %> |
    <% else %>
      <%= link_to "Login", new_user_session_path %> 
  <% end %>
  <%= link_to 'New Supplier', new_supplier_path %>

  <div class="row">
    <% @suppliers.each do |supplier| %>
    	<div class= "supplier_card_wrap col-md-4 col-sm-6 col-xs-12" >
    		<ul class="supplier_card">
		      <li><strong><%= best_in_place supplier, :name, :activator => "#name" + supplier.id.to_s  %></strong>
		      	<%= edit_icon supplier.id, 'name'  %>
		      </li>
		      <li><%= best_in_place supplier, :address, :activator => "#address" + supplier.id.to_s  %>
		      	<%= edit_icon supplier.id, 'address'  %>
		      </li>
		      <li><%= best_in_place supplier, :phone, :activator => "#phone" + supplier.id.to_s  %>
		      	<%= edit_icon supplier.id, 'phone'  %>
		      </li>
		      <li><%= best_in_place supplier, :website, :activator => "#website" + supplier.id.to_s  %>
		      	<%= edit_icon supplier.id, 'website'  %>
		      </li>
		      <li class="tag_list"><%= best_in_place supplier, :tag_list, :activator => "#tag_list" + supplier.id.to_s  %>
		      	<%= edit_icon supplier.id, 'tag_list'  %>
		      </li>
		      <li><%= link_to image_tag(AssetUrl.url + "img/icons/delete.png", 
				                    :alt => "delete",
				                    :class => "delete_icon" ),
				              supplier,
				              method: :delete,
				              data: { confirm: 'Are you sure you want to delete ' + supplier.name + '?' } %>
		      </li>
      		</ul>
    	</div>
    <% end %>
  </div>

<br>


</div>
