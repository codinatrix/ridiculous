<div class="form_wrap">
<%= form_for @supplier, html: { role: "form" } do |f| %>
<h1>Add a supplier</h1>
  <% if @supplier.errors.any? %>
      <ul>
      <% @supplier.errors.full_messages.each do |msg| %>
        <li class="alert alert-danger"><button type="button" class="close" data-dismiss="alert">x</button><%= msg %></li>
      <% end %>
      </ul>
  <% end %>

  <div class="form-group">
    <%= f.text_field :name, :required => true, :placeholder => 'Supplier name', :maxlength => 100, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.text_field :address, :required => true, :placeholder => 'Address', :maxlength => 100, :class => 'form-control' %>
  </div>
  <div class="form-group">    
    <%= f.telephone_field :phone, :placeholder => 'Phone number', :maxlength => 15, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.url_field :website, :placeholder => 'Website', :maxlength => 100, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.text_field :tag_list, :value => @tag_list, :placeholder => 'Tags (separate with comma)', :maxlength => 100, :class => 'form-control' %>
   
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
